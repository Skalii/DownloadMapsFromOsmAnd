<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/item_region"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/item_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_map_item_region"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/ic_map"
        app:tint="@color/status_false"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_region_item_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/text"
        android:textSize="16sp"
        tools:text="Region" />

    <ImageView
        android:id="@+id/image_status_item_region"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:srcCompat="@mipmap/ic_action_import"
        app:tint="@color/status_false"
        tools:ignore="ContentDescription" />

</androidx.appcompat.widget.LinearLayoutCompat>